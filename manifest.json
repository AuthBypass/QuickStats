{
    "manifest_version": 2,
    "name": "QuickStats",
    "version": "1.0",
    "description": "Zeigt deine LinkedIn-Verweildauer im Feed als Graph und Statistik.",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/feed/"
            ],
            "js": [
                "content.js",
                "chart.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png"
    }
}
